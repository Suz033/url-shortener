<form action="/" method="POST">
  <div class="input-group mb-3 mt-3">

    <input type="url" class="form-control" id="url-input" placeholder="Input URL here" name="url" value="{{ originalUrl }}">

    <a href="/" class="btn btn-outline-danger" id="reset-btn" ><i class="fa-solid fa-arrow-rotate-left"></i></a>
    <button type="submit" class="btn btn-outline-primary" id="shorten-btn" >Shorten</button>

  </div>

  {{!-- input url and click shorten btn --}}
  {{#if shortUrl}}
  <div class="alert alert-success d-flex justify-content-between align-items-center" role="alert">

    <span class="ms-2" style="font-weight: bold; color: #00b3b3;">Your short url isï¼š</span>

    <code style="font-size: large; color: #9f51be;">{{ shortUrl }}</code>

    <div class="d-flex align-items-center">

      <a href="{{ shortUrl }}" target="_blank"><i class="fa-solid fa-arrow-up-right-from-square fa-lg" style="color: #00b3b3;"></i></a>

      <button class="btn" data-clipboard-text="{{ shortUrl }}" value="{{ shortUrl }}" id="copy-btn"><i class="fa-regular fa-copy fa-bounce fa-xl" style="color: #00b3b3;"></i></button>

    </div>

  </div>
  {{/if}}

  {{!-- use the wrong short url --}}
  {{#if errorUrl}}
  <div class="alert alert-danger d-flex justify-content-center align-items-center" role="alert">

    <span style="font-weight: bold; color: #d60000;">The URL</span>
    <code class="ms-3 me-3" style="font-size: large; font-weight: normal;">"{{ errorUrl }}"</code>
    <span style="font-weight: bold; color: #d60000;">doesn't exist, create one?</span>

  </div>
  {{/if}}
</form>